{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "removeComments": true,
    "outFile": "dist/index",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [ "esnext", "DOM", "DOM.Iterable" ],
    "target": "es2019",
    "plugins": [
      { "name": "ts-lit-plugin" }
    ],
    "preserveWatchOutput": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules"]
  }
}

