{
  "name": "lit-modal-portal",
  "version": "0.3.0",
  "description": "A specialized portal mechanism for modals developed with the Lit framework.",
  "keywords": [
    "Lit",
    "modal",
    "portal",
    "custom element"
  ],
  "homepage": "https://github.com/cirrus-logic/lit-modal-portal#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/cirrus-logic/lit-modal-portal.git"
  },
  "bugs": {
    "url": "https://github.com/cirrus-logic/lit-modal-portal/issues"
  },
  "license": "MIT",
  "author": "Nicholas Wilcox",
  "files": [
    "/README.md",
    "/CHANGELOG.md",
    "/LICENSE.txt",
    "/lit-modal-portal-core.min.{js,js.map}",
    "/lit-modal-portal-lib.min.{js,js.map}",
    "/index.{js,js.map,d.ts,d.ts.map}",
    "/modal-portal.{js,js.map,d.ts,d.ts.map}",
    "/modal-controller.{js,js.map,d.ts,d.ts.map}",
    "/portal.{js,js.map,d.ts,d.ts.map}",
    "/lib/",
    "/docs/"
  ],
  "main": "./index.js",
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run tsc && npm run esbuild && npm run esbuild:min",
    "build:watch": "concurrently \"npm:tsc:watch\" \"npm:esbuild:watch\"",
    "clean": "rimraf ./lib ./index.* ./modal-portal.* ./modal-controller.* ./portal.* ./lit-modal-portal-*",
    "dev": "wds --node-resolve --watch --app-index dev/index.html",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "esbuild": "node esbuild.config.js",
    "esbuild:min": "node esbuild.config.js -m",
    "esbuild:watch": "node esbuild.config.js -w",
    "lint": "prettier -w .",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@web/dev-server": "^0.1.31",
    "@web/dev-server-esbuild": "^0.3.0",
    "concurrently": "^7.1.0",
    "esbuild": "^0.14.36",
    "prettier": "2.6.2",
    "rimraf": "^3.0.2",
    "ts-lit-plugin": "^1.2.1",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.3",
    "yargs-parser": "^21.0.1"
  },
  "dependencies": {
    "lit": "^2.2.2",
    "immutable": "^4.1.0"
  },
  "types": "./index.d.ts"
}
